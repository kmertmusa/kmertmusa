        private void button1_Click(object sender, EventArgs e)
        {
            if (cd_renk.ShowDialog() == DialogResult.OK)
            {
                btn_renk.BackColor = cd_renk.Color;
            }
           
        }

        private void btn_font_Click(object sender, EventArgs e)
        {
            fd_font.ShowDialog();
            btn_font.Font = fd_font.Font;
            foreach (var item in Controls)
            {
                if (item is Button btn)
                {
                    btn_font.Font = fd_font.Font;
                 }
            }

        }
        private void btn_islem(object a, EventArgs b) 
        {
            if (a is Button btn)
            {
                int deger = Convert.ToInt32(btn.Tag);
                pb_ilerleme.Value = deger;

            }
        }

